<h1>Upcoming Events</h1>

  <% if !@events.empty? %>
    <ul>
      <% @events.each do |event| %>
        <li><h1><%= event.name %></h1>
          <p><%= event.time.strftime("%b %d, %Y %I:%M") %></p>
        </li>

      <% end %>
      </ul>
  <% else %>
    <p>You have no scheduled events at this time.</p>
  <% end %>